<mvc:View
    controllerName="com.invoiceappairdit.invoiceapprovalairdit.controller.POLists"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:f="sap.f"
    xmlns:vm="sap.ui.fl.variants"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
>
    <Page
        showFooter="false"
        showHeader="false"
    >
        <smartFilterBar:SmartFilterBar
            id="smartFilterBar"
            entitySet="VIMPOHead"
            persistencyKey="SmartFilter_Explored"
            considerAnalyticalParameters="true"
            initialized="initialized"
            showRestoreButton="true"
        >
            <smartFilterBar:controlConfiguration>
                <smartFilterBar:ControlConfiguration
                    key="Invoicedate"
                    visibleInAdvancedArea="true"
                    conditionType="{
								module: 'sap.ui.comp.config.condition.DateRangeType'
							}"
                />
            </smartFilterBar:controlConfiguration>
        </smartFilterBar:SmartFilterBar>
        <IconTabBar
            id="idIconTabBarMulti"
            expanded="{device>/isNoPhone}"
            class="customTabBar"
            select="onIconTabBarSelect"
        >
            <items>
                <IconTabFilter
                    key="Pending"
                    icon="./Images/open.png"
                    text="Pending"
                >
                    <smartTable:SmartTable
                        entitySet="VIMPOHead"
                        smartFilterId="smartFilterBar"
                        enableExport="true"
                        beforeExport="onBeforeExport"
                        useVariantManagement="true"
                        useTablePersonalisation="true"
                        header="Open GRN"
                        showRowCount="true"
                        persistencyKey="SmartTableRefApp_Explored"
                        enableAutoBinding="true"
                        tableType="ResponsiveTable"
                        demandPopin="true"
                        enableAutoColumnWidth="false"
                        id="smartTable"
                    >
                        <Table
                            selectionChange="selectionChangeHandlerRregister"
                            growing="true"
                            growingThreshold="10"
                            id="idTableInvoice"
                        >
                            <columns>
                                <Column>
                                    <customData>
                                        <core:CustomData
                                            key="p13nData"
                                            value='\{"columnKey": "REQUEST_NO","leadingProperty": "REQUEST_NO", "sortProperty": "REQUEST_NO", "filterProperty": "REQUEST_NO", "columnIndex": "0" }'
                                        />
                                    </customData>
                                    <Label
                                        text="Request No."
                                        wrapping="true"
                                    />
                                </Column>
                                <Column>
                                    <customData>
                                        <core:CustomData
                                            key="p13nData"
                                            value='\{"columnKey": "ASNamount","leadingProperty": "ASNamount", "sortProperty": "ASNamount", "filterProperty": "ASNamount", "columnIndex": "4" }'
                                        />
                                    </customData>
                                    <Label
                                        text="Amount"
                                        wrapping="true"
                                    />
                                </Column>
                            </columns>
                            <items>
                                <ColumnListItem
                                    vAlign="Middle"
                                    type="Navigation"
                                    press="onClickInvoice"
                                >
                                    <cells>
                                        <Text text="{REQUEST_NO}" />
                                        <ObjectNumber
                                            class="sapUiSmallMarginBottom"
                                            number="{
						                    parts:[{path:'ASNamount'},{path:'Waers'}],
						                    type: 'sap.ui.model.type.Currency',
						                    formatOptions: {showMeasure: false}
					}"
                                            unit="INR"
                                        />
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>
                    </smartTable:SmartTable>
                </IconTabFilter>

                <IconTabFilter
                    key="rejected"
                    icon="./Images/submitted.png"
                    text="Rejected"
                >
                    <smartTable:SmartTable
                        entitySet="RejectedTab"
                        smartFilterId="smartFilterBar"
                        enableExport="true"
                        beforeExport="onBeforeExport"
                        useVariantManagement="true"
                        useTablePersonalisation="true"
                        header="Items"
                        showRowCount="true"
                        persistencyKey="SmartTableRefApp_Explored"
                        enableAutoBinding="true"
                        tableType="ResponsiveTable"
                        demandPopin="true"
                        enableAutoColumnWidth="false"
                        id="smartTableSub"
                    >
                        <Table
                            selectionChange="selectionChangeHandlerRregister"
                            growing="true"
                            growingThreshold="10"
                            id="idTableInvoiceSub"
                        >
                            <columns>
                                <Column>
                                    <customData>
                                        <core:CustomData
                                            key="p13nData"
                                            value='\{"columnKey": "REQUEST_NO","leadingProperty": "REQUEST_NO", "sortProperty": "REQUEST_NO", "filterProperty": "REQUEST_NO", "columnIndex": "0" }'
                                        />
                                    </customData>
                                    <Label
                                        text="Request No."
                                        wrapping="true"
                                    />
                                </Column>
                                <Column>
                                    <customData>
                                        <core:CustomData
                                            key="p13nData"
                                            value='\{"columnKey": "ASNamount","leadingProperty": "ASNamount", "sortProperty": "ASNamount", "filterProperty": "ASNamount", "columnIndex": "2" }'
                                        />
                                    </customData>
                                    <Label
                                        text="Amount"
                                        wrapping="true"
                                    />
                                </Column>
                            </columns>
                            <items>
                                <ColumnListItem
                                    vAlign="Middle"
                                    type="Navigation"
                                    press="onClickInvoice"
                                >
                                    <cells>
                                        <!-- <ObjectStatus
                                            text="{path: 'Status', formatter: '.formatter.statusFormattertest'}"
                                            state="{path: 'Status', formatter: '.formatter.indicationFormat'}"
                                            inverted="true"
                                            class="noWrapText"
                                        /> -->
                                        <Text text="{REQUEST_NO}" />
                                        <ObjectNumber
                                            class="sapUiSmallMarginBottom"
                                            number="{
						parts:[{path:'ASNamount'},{path:'Waers'}],
						type: 'sap.ui.model.type.Currency',
						formatOptions: {showMeasure: false}
					}"
                                            unit="INR"
                                        />
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>
                    </smartTable:SmartTable>
                </IconTabFilter>
            </items>
        </IconTabBar>
    </Page>
</mvc:View>
